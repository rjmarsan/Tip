<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="item_label">
        <item name="android:layout_width">75sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        
    </style>
    <style name="item_input_nothack">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">0123456789,.</item>
        <item name="android:textColor">@color/bold_text_color</item>
        <item name="android:textColorHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/default_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">start</item> <!--  hack to get it to stop flashing -->
        </style>
    <style name="field_box">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:background">@drawable/field_background</item>
    </style>
    <style name="divider_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/divider_text_color</item>
        <item name="android:gravity">center</item>
        
    </style>
    
    
</resources>